# Required environment for code execution
E2B_API_KEY=

# Security Configuration
# API key for authenticating requests (required for all endpoints except /health)
API_KEY=your-secret-api-key-here

# OpenAI Configuration (required if using OpenAI provider)
OPENAI_API_KEY=
# Optional: custom base URL for OpenAI API (e.g., for using OpenAI-compatible APIs)
OPENAI_CUSTOM_BASE_URL=

# Anthropic Configuration (required if using Anthropic provider)
ANTHROPIC_API_KEY=
# Optional: custom base URL for Anthropic API
ANTHROPIC_CUSTOM_BASE_URL=

# Google Configuration (required if using Google provider)
GOOGLE_API_KEY=

########################################
# LLM Specific Configurations
# Provider can be: 'openai' | 'anthropic' | 'google'
########################################

# Default LLM Configuration
DEFAULT_PROVIDER=openai
DEFAULT_MODEL=gpt-5
DEFAULT_MAX_TOKENS=4096

# Planning Node LLM Configuration
PLANNING_PROVIDER=openai
PLANNING_MODEL=gpt-5
PLANNING_MAX_TOKENS=4096

# Code Planning Node LLM Configuration
CODE_PLANNING_PROVIDER=openai
CODE_PLANNING_MODEL=gpt-5
CODE_PLANNING_MAX_TOKENS=4096

# Code Generation Node LLM Configuration
CODE_GENERATION_PROVIDER=openai
CODE_GENERATION_MODEL=gpt-5
CODE_GENERATION_MAX_TOKENS=4096

# Answering Node LLM Configuration
ANSWERING_PROVIDER=openai
ANSWERING_MODEL=gpt-5
ANSWERING_MAX_TOKENS=4096

# Agent Configuration
CODE_PLANNING_MAX_STEP_RETRIES=3
CODE_GENERATION_MAX_RETRIES=5

# Task Tracking Configuration
TASK_CLEANUP_INTERVAL_SECONDS=60
TASK_EXPIRY_SECONDS=300

# Sandbox Configuration
SANDBOX_DEFAULT_TIMEOUT_SECONDS=2400

# Optional - other settings
LOG_LEVEL=INFO
DEFAULT_WORKING_DIRECTORY=/home/user
DEFAULT_DATA_DIRECTORY=/home/user/data
ALLOWED_ORIGINS=*

# File Upload Configuration
# Maximum file size in MB (default: 100)
MAX_FILE_SIZE_MB=100
